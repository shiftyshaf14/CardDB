<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Expansions - Pokémon TCG</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>

  <nav class="simple-navbar">
    <div class="nav-container">
      <div class="nav-logo"><a href="/">CardDB</a></div>
      <ul class="nav-links">
        <li><a href="/ygoSearch ">Search</a></li>
        <li><a href="/ygoSets">Expansions</a></li>
        <li><a href="/help">Help</a></li>
      </ul>
    </div>
  </nav>

  <h1>Sets / Expansions</h1>

  <div class="sort-buttons">
  <form action="/ygoSets" method="GET">
    <input type="hidden" name="sort" value="date">
    <input type="hidden" name="order" value="<%= sortField === 'date' && sortOrder === 'asc' ? 'desc' : 'asc' %>">
    <button class="btn sort-btn" type="submit">
      Sort by Date <%= sortField === 'date' ? (sortOrder === 'asc' ? '↑' : '↓') : '' %>
    </button>
  </form>

  <form action="/ygoSets" method="GET">
    <input type="hidden" name="sort" value="alpha">
    <input type="hidden" name="order" value="<%= sortField === 'alpha' && sortOrder === 'asc' ? 'desc' : 'asc' %>">
    <button class="btn sort-btn" type="submit">
      Sort by Name <%= sortField === 'alpha' ? (sortOrder === 'asc' ? '↑' : '↓') : '' %>
    </button>
  </form>
  </div>

  <div class="set-container">
    <% sets.forEach(set => { %>
      <div class="set-card">
        <img src="<%= set.images.logo %>" alt="<%= set.name %> Logo" onerror="this.onerror=null; this.src='/default.png';">
        <h2><%= set.name %></h2>
        <p>Released: <%= set.releaseDate %></p>
        <a href="/sets/<%= set.id %>" class="btn">View Cards</a>
      </div>
    <% }); %>
  </div>

</body>
</html>
